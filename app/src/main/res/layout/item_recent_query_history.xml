<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="query"
            type="String" />
        <variable
            name="holder"
            type="com.flow.moviesearch.presentation.ui.recentquery.RecentQueryHistoryAdapter.RecentQueryHistoryItemViewHolder" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin"
        android:background="?attr/selectableItemBackground"
        android:onClickListener="@{()->holder.itemClickListener.invoke(query)}"
        >

        <TextView
            android:textColor="@color/text_selector_black_2c2c2c"
            android:text="@{query}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>